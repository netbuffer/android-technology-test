<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="testMainThreadHandler1"
            android:text="testMainThreadHandler1"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn1_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="testMainThreadHandler1Delay"
            android:text="testMainThreadHandler1Delay"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn1_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="testSubThreadUseHandler1"
            android:text="testSubThreadUseHandler1"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="testMainThreadHandler2"
            android:text="testMainThreadHandler2"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="testMainThreadHandler3"
            android:text="testMainThreadHandler3"
            android:textAllCaps="false" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>